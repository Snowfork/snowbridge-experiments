{
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "always"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "trailingComma": "es5",
        "singleQuote": false,
        "semi": false
      }
    }
  ]
}
